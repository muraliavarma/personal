---
import Layout from '../layouts/Layout.astro';
import ProjectItem from '../components/ProjectItem.astro';
import { getCollection } from 'astro:content';

// Get all projects from the content collection
const allProjects = await getCollection('projects');
// Sort by sortOrder
const projects = allProjects.sort((a, b) => a.data.sortOrder - b.data.sortOrder);
---

<Layout title="Projects | Murali Varma">
  <h1>Projects</h1>
  <p class="intro">
    Here are some of the projects I've worked on over the years. This is a curated list of projects that I've found particularly interesting or challenging.
  </p>

  <div class="projects-list">
    {projects.map((project) => (
      <div class="project">
        <h2>{project.data.title}</h2>
        <ProjectItem 
          tags={project.data.tags}
          urlLink={project.data.urlLink}
          urlText={project.data.urlText}
        >
          <div slot="description" class="project-content" set:html={project.body} />
          {project.data.image && (
            <img 
              slot="image" 
              src={project.data.image} 
              alt={`${project.data.title} screenshot`} 
            />
          )}
        </ProjectItem>
      </div>
    ))}
  </div>
</Layout>

<style>
  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .intro {
    font-size: 1.1rem;
    margin-bottom: 3rem;
    max-width: 80ch;
    line-height: 1.6;
  }

  .projects-list {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .project h2 {
    margin-top: 0;
    margin-bottom: 1rem;
    font-size: 1.8rem;
  }

  .project-content {
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .intro {
      font-size: 1rem;
    }

    .project h2 {
      font-size: 1.5rem;
    }
  }
</style> 