---
// Sidebar.astro
// Props: projects (array of { data: { title: string } })
const { projects } = Astro.props;
---
<aside class="sidebar">
  <nav>
    <ul>
      {projects.map((project: any) => (
        <li><a href={`#${project.data.title.replace(/\s+/g, '-')}`}>{project.data.title}</a></li>
      ))}
    </ul>
  </nav>
</aside>

<style>
.sidebar {
  min-width: 220px;
  max-width: 260px;
  padding: 2rem 1rem 2rem 0;
  position: sticky;
  top: 2rem;
}
.sidebar nav {
  background: #f6f8fa;
  border-radius: 12px;
  border: 1px solid #e5e7eb;
  padding: 1rem;
  box-shadow: 0 2px 8px rgba(0,0,0,0.02);
}
.sidebar ul {
  list-style: none;
  padding: 0;
  margin: 0;
}
.sidebar li {
  margin-bottom: 0.7rem;
}
.sidebar a {
  color: #3b4cca;
  text-decoration: none;
  font-size: 1rem;
  transition: color 0.2s;
}
.sidebar a:hover {
  color: #1d2a6b;
}

html.dark .sidebar nav {
  background: var(--background-alt, #1e293b);
  border: none;
  box-shadow: none;
}
html.dark .sidebar a {
  color: var(--link-color, #38bdf8);
}
html.dark .sidebar a:hover {
  color: var(--link-hover, #7dd3fc);
}
</style> 