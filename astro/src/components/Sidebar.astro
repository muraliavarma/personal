---
// Sidebar.astro
// Props: projects (array of { data: { title: string } })
const { projects } = Astro.props;
---
<aside class="sidebar">
  <nav>
    <ul>
      {projects.map((project: any) => (
        <li><a href={`#${project.data.title.replace(/\s+/g, '-')}`}>{project.data.title}</a></li>
      ))}
    </ul>
  </nav>
</aside>

<style>
.sidebar {
  min-width: 220px;
  max-width: 260px;
  padding: 2rem 1rem 2rem 0;
  position: sticky;
  top: 2rem;
}
.sidebar nav {
  background: var(--background-alt, #f8fafc);
  border-radius: 12px;
  padding: 1rem;
  box-shadow: 0 2px 8px rgba(0,0,0,0.03);
}
.sidebar ul {
  list-style: none;
  padding: 0;
  margin: 0;
}
.sidebar li {
  margin-bottom: 0.7rem;
}
.sidebar a {
  color: var(--link-color, #0ea5e9);
  text-decoration: none;
  font-size: 1rem;
  transition: color 0.2s;
}
.sidebar a:hover {
  color: var(--link-hover, #0284c7);
}
</style> 